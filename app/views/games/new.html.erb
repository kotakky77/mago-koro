<% provide(:title, "新規ゲーム作成") %>
<h1>新規ゲーム作成</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_with(model: @game, local: true) do |f| %>
      <% if @game.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@game.errors.count, "error") %> により、ゲームを作成できませんでした:</h2>
          <ul>
            <% @game.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, "ゲームタイトル" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :max_players, "最大プレイヤー数" %>
        <%= f.select :max_players, [2, 3, 4], {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "ゲームを作成", class: "btn btn-primary" %>
        <%= link_to "キャンセル", games_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
